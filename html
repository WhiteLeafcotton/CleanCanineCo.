<!-- Detail View Section -->
<div class="detail-view" id="detailView" onclick="closeDetail()">
  <div class="detail-carousel" id="detailCarousel">
    <!-- Images dynamically injected here -->
    <div class="detail-info">
    <p class="kit-description">${image.description}</p>
    <p class="kit-price">${image.price}</p>
  </div>
</div>
 



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<script>
  $(document).ready(function () {
    $('.kit').click(function () {
      var kitId = $(this).data('kit');
      var images = getImagesForKit(kitId);

      var $carousel = $('#detailCarousel');
      $carousel.empty();

      images.forEach(image => {
  $carousel.append(`
    <div class="detail-slide" style="position: relative;">
      <div class="image-wrapper" style="position: relative; width: 100%; height: 100%;">
        <img src="${image.src}" alt="Detail Image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
        
        <div class="detail-info" style="position: absolute; top: 16px; left: 16px; color: white; text-shadow: 0 1px 2px rgba(0,0,0,0.6); z-index: 2;">
          <p class="kit-description">${image.description}</p>
          <p class="kit-price">${image.price}</p>
        </div>
        
        <button class="add-to-bag" style="
          position: absolute;
          bottom: 16px;
          left: 50%;
          transform: translateX(-50%);
          z-index: 2;
          padding: 10px 20px;
          background-color: black;
          color: white;
          border: none;
          border-radius: 8px;
          font-size: 14px;
          cursor: pointer;
        ">
          Add to Bag
        </button>
      </div>
    </div>
  `);
});




      $('#detailView').fadeIn();
    });

    $('#detailView').on('click', function (e) {
      if (e.target.id === 'detailView') {
        closeDetail();
      }
    });
  });

  function getImagesForKit(id) {
  switch (id) {
    case 1:
      return [
        {
          src: "https://github.com/WhiteLeafcotton/Balcony/blob/main/2.png?raw=true",
          description: "Boho Kit 1: Cozy neutral tones with hanging planters.",
          price: "$120.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Boho+Kit+1+Image+2",
          description: "Comfy pillows and low seating setup.",
          price: "$120.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Boho+Kit+1+Image+3",
          description: "Soft lighting for an intimate evening vibe.",
          price: "$120.00"
        }
      ];
    case 2:
      return [
        {
          src: "https://github.com/WhiteLeafcotton/Balcony/blob/main/IMG_9453.jpg?raw=true",
          description: "Boho Kit 2: Vibrant orange tones and rich textures.",
          price: "$135.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Boho+Kit+2+Image+2",
          description: "Terracotta and earthy decor blend beautifully.",
          price: "$135.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Boho+Kit+2+Image+3",
          description: "Ambient lantern lighting with rattan accents.",
          price: "$135.00"
        }
      ];
       case 3:
      return [
        {
          src: "https://github.com/WhiteLeafcotton/Balcony/blob/main/2.png?raw=true",
          description: "Boho Kit 2: Vibrant orange tones and rich textures.",
          price: "$135.00"
        },
        {
          src: "https://github.com/WhiteLeafcotton/Balcony/blob/main/3.png?raw=true",
          description: "Terracotta and earthy decor blend beautifully.",
          price: "$135.00"
        },
        {
          src: "https://github.com/WhiteLeafcotton/Balcony/blob/main/1.png?raw=true",
          description: "Ambient lantern lighting with rattan accents.",
          price: "$135.00"
        }
      ];
    // Repeat similarly for kits 3â€“10...
    default:
      return [
        {
          src: "https://via.placeholder.com/800x1000?text=Default+Image+1",
          description: "Default kit image one.",
          price: "$100.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Default+Image+2",
          description: "Default kit image two.",
          price: "$100.00"
        },
        {
          src: "https://via.placeholder.com/800x1000?text=Default+Image+3",
          description: "Default kit image three.",
          price: "$100.00"
        }
      ];
  }
}


  function closeDetail() {
    $('#detailView').fadeOut();
  }
</script>
  

